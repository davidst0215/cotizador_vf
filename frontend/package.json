{
  "name": "cotizador-tdv-frontend",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 3000",
    "preview": "next start --port 3000",
    "clean": "rm -rf .next node_modules && echo 'Cleaned build artifacts and dependencies'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,css,md}\"",
    "analyze": "ANALYZE=true npm run build",
    "optimize": "npm run lint:fix && npm run format && npm run typecheck",
    "postinstall": "husky install || true"
  },
  "dependencies": {
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.453.0",
    "next": "^14.2.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.5.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.15",
    "@types/node": "^20.16.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.1.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.15",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react-scan": "^0.4.3",
    "source-map-explorer": "^2.5.3",
    "stylelint-config-standard": "^39.0.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
